@{
    ViewData["Title"] = "Index Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

<h2>Roles Listing</h2>

<a asp-action="Create" asp-controller="Roles">Create New Role</a> | <a asp-action="ManageUserRoles">Manage User Role</a>
<hr />
<div>
    @foreach(var role in Model)
    {
    <p>
        @role.Name |
        <span onclick="return confirm('Are you sure you want to delete this role?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span> |
        @Html.ActionLink("Edit", "Edit", new {roleName = @role.Name})
    </p>
    }
</div>